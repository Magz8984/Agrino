<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CropActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/cropToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#262626"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_below="@+id/cropToolbar"
        android:id="@+id/imgUpload"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/addphoto"
        android:scaleType="center"
        android:background="@drawable/upload"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/txtTalk"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/imgUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Talk about it"
        android:textColor="#fff"
        android:backgroundTint="@color/button"
        />

    <Button
        android:id="@+id/btnPostCrop"
        android:layout_below="@+id/txtTalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button"
        android:layout_margin="5sp"
        android:text="@string/post"
        />
</RelativeLayout>